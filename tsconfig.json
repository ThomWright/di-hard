{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2016",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/__tests__/*.ts"]
}
